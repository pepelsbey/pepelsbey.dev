---
layout: page.njk
---

{% include 'header.njk' %}

<main class="main" id="main">
    <header class="caption">
        <h1 class="caption__title">
            {{ title }}
        </h1>
    </header>

    <section class="intro">
        <img
            class="intro__photo radius"
            src="{{ intro.photo }}"
            width="308" height="205"
            alt="{{ intro.alt }}"
        >
        <p class="intro__who">
            {{ intro.who }}
        </p>
        <p class="intro__what content content-inline">
            {{ intro.what | markdownInline | safe }}
        </p>
    </section>

    <div class="profile">
        <section class="profile__item">
            <h2 class="profile__title">
                {{ skills.title }}
            </h2>
            <p class="profile__desc">
                {{ skills.desc }}
            </p>
            <ul class="profile__columns">
                {% for item in skills.list %}
                    <li>
                        {{ item }}
                    </li>
                {% endfor %}
            </ul>
        </section>
        <section class="profile__item">
            <h2 class="profile__title">
                {{ work.title }}
            </h2>
            <p class="profile__desc">
                {{ work.desc }}
            </p>
            <ol class="work" reversed>
                {% for item in work.list %}
                    <li class="work__item">
                        <time class="work__period">{{ item.period }}</time>
                        <span class="work__company">{{ item.company }}</span>
                        <span class="work__title">{{ item.title }}</span>
                    </li>
                {% endfor %}
            </ol>
        </section>
        <section class="profile__item">
            <h2 class="profile__title">
                {{ contacts.title }}
            </h2>
            <p class="profile__desc">
                {{ contacts.desc }}
            </p>
            <div class="content content-block content-inline">
                <ul>
                    {% for item in contacts.list %}
                        <li>
                            <a href="{{ item.url }}">
                                {{- item.title -}}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    </div>
</main>

{% include 'footer.njk' %}
