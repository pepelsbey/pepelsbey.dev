---
eleventyComputed:
  title: '{% if pagination.pageNumber > 0 %}Page {{ pagination.pageNumber + 1 }}{% else %}{{ title }}{% endif %}'
permalink: 'articles/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}index.html'
pagination:
  data: collections.articles
  size: 5
  reverse: true
layout: page.njk
---

{% include 'header.njk' %}

<main class="main" id="main">
    <header class="caption">
        <h2 class="caption__title">
            {{ title }}
        </h2>
        <span class="caption__number">
            {{ collections.articles.length }}
        </span>
        <a class="caption__link action" href="/feed/">
            <svg class="action__icon" width="24" height="24" aria-hidden="true">
                <use href="/images/icons.svg#rss">
            </svg>
        </a>
    </header>

    {% from 'card.njk' import card %}

    {% for article in collections.articles | reverse %}
        {% if loop.index <= 5 and article.url != page.url %}
            {{ card(
                article=article,
                heading='h2'
            ) }}
        {% endif %}
    {% endfor %}

    {% include 'pages.njk' %}
</main>

{% include 'footer.njk' %}
