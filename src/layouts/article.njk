---
layout: page.njk
---

<div class="main">
	<div class="main__gaps">
		<main id="main">
			<header class="main__lead lead column">
				<h1 class="lead__title">
					{{ title | safe }}
				</h1>
				<p class="lead__tags tags">
					{% for tag in tags %}
						<span class="tags__item">{{ tag }}</span>
					{% endfor %}
				</p>
				<time class="lead__date" datetime="{{ date | dateISO }}">
					{{ date | dateLong }}
				</time>
				<svg class="lead__scribble" width="200" height="200" aria-hidden="true">
					<use href="/images/scribbles.svg#1"/>
				</svg>
			</header>
			<div class="two-columns column">
				<div class="two-columns__toc">
					{% include 'toc.njk' %}
				</div>
				<div class="two-columns__article">
					<div class="content content-block content-inline" id="article-content">
						{{ content | safe }}
						<p class="content__last-updated">
							<small>
								Last updated on
								<time datetime="{{ page.inputPath | lastModified | dateISO }}">
									{{ page.inputPath | lastModified | dateLong }}
								</time>
							</small>
						</p>
					</div>
				</div>
			</div>
		</main>
		<aside class="column">
			<header class="caption">
				<h2 class="caption__title">
					More
					<span class="caption__label">
						&nbsp;Articles
					</span>
					<span class="caption__number">
						{{ collections.articles.length - 1 }}
						<span class="caption__total">in total</span>
					</span>
				</h2>
				<a class="caption__link action action--hover" href="/articles/" aria-label="View all articles">
					<span class="caption__label">
						View all
					</span>
					<svg class="action__icon" width="24" height="24" aria-hidden="true">
						<use href="/images/icons.svg#right"/>
					</svg>
				</a>
			</header>

			{% from 'article-card-list.njk' import articleCardList with context %}

			{{ articleCardList(
				collection=collections.articles | reverse,
				heading='h3',
				limit=5
			) }}
		</aside>
	</div>
</div>
