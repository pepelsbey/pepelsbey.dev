{% include 'skip-link.njk' %}

<header class="header column">
	<button
		class="header__button action action--hover"
		type="button"
		aria-expanded="false"
		aria-controls="menu"
		aria-label="Toggle menu"
	>
		<svg class="header__icon-menu action__icon" width="24" height="24" aria-hidden="true">
			<use href="/images/icons.svg#menu"/>
		</svg>
		<span class="header__text-menu">
			Menu
		</span>

		<svg class="header__icon-close action__icon" width="24" height="24" aria-hidden="true">
			<use href="/images/icons.svg#close"/>
		</svg>
		<span class="header__text-close">
			Close
		</span>
	</button>

	<a class="header__link" href="/" aria-label="Home">
		<svg class="header__logo" width="32" height="32" aria-hidden="true">
			<use href="/images/icons.svg#logo"/>
		</svg>
	</a>

	{% include 'menu.njk' %}
</header>
