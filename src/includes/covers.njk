{% set name = 'index' if page.url == '/' else page.fileSlug %}

{% set path =
    global.domain + page.url + 'cover.png' if
    cover else
    global.domain + '/images/covers/' + name + '.png'
%}

<meta property="og:type" content="website">
<meta property="og:title" content="{{ global.title }}">
<meta property="og:description" content="{{ global.description }}">
<meta property="og:url" content="{{ global.domain }}">

<meta property="og:image" content="{{ path }}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@pepelsbey_dev">
